# ==============================================================================
# Environment Configuration Template
# ==============================================================================
# Copy this file to .env and fill in your actual values
# Never commit .env file to version control!
# ==============================================================================

# ==============================================================================
# ENVIRONMENT & APPLICATION
# ==============================================================================
ENV=dev
PORTAL_BASE_URL=https://dev-aisoc-fe.qualgo.dev

# ==============================================================================
# BROWSER CONFIGURATION
# ==============================================================================
BROWSER=chromium
HEADLESS=true
SLOW_MO=0

# ==============================================================================
# DEBUG & TRACING
# ==============================================================================
DEBUG=false
TRACE=false

# ==============================================================================
# TIMEOUTS (in milliseconds)
# ==============================================================================
DEFAULT_TIMEOUT=10000
NAVIGATION_TIMEOUT=30000

# ==============================================================================
# SCREENSHOTS & VIDEOS
# ==============================================================================
SCREENSHOT_ON_FAILURE=true
SCREENSHOT_DIR=reports/screenshots
VIDEO_ON_FAILURE=false
VIDEO_DIR=reports/videos

# ==============================================================================
# WEB TEST CREDENTIALS
# ==============================================================================
TEST_EMAIL=your-email@example.com
TEST_PASSWORD=your-password-here
TEST_MFA_CODE=

# ==============================================================================
# API / KEYCLOAK CONFIGURATION
# ==============================================================================
KEYCLOAK_BASE_URL=https://nonprod-common-keycloak.qualgo.dev
KEYCLOAK_REALM=dev-ai-soc
KEYCLOAK_GRANT_TYPE=password

KEYCLOAK_CLIENT_ID=your-client-id
KEYCLOAK_CLIENT_SECRET=your-client-secret
KEYCLOAK_USERNAME=your-username@example.com
KEYCLOAK_PASSWORD=your-password-here

KEYCLOAK_INVALID_USERNAME=invalid@qualgo.net
KEYCLOAK_INVALID_PASSWORD=WrongPassword123@

# ==============================================================================
# API PERFORMANCE THRESHOLDS
# ==============================================================================
MAX_RESPONSE_TIME_MS=3000
TOKEN_EXPIRES_IN=300
REFRESH_TOKEN_EXPIRES_IN=1800
